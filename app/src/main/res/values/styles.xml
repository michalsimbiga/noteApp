<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/app_background_gradient_drawable</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorControlActivated">@color/topGradient</item>
        <item name="colorControlHighlight">@color/topGradient</item>
    </style>

    <style name="IndicatorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_half_transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:opacity">opaque</item>
    </style>

    <style name="NoteMonthYearText" parent="IndicatorText">
        <item name="android:textSize">14sp</item>
        <item name="android:opacity">opaque</item>
    </style>

    <style name="NoteDayText" parent="NoteMonthYearText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="OverviewNoteStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="NoteHeaderSmall" parent="OverviewNoteStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteHeaderLarge" parent="NoteHeaderSmall">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NoteContentSmall" parent="OverviewNoteStyle">
        <item name="android:textColor">@color/black_half_transparent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NoteTimeSmall" parent="OverviewNoteStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="NoteTimeLarge" parent="NoteTimeSmall">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
